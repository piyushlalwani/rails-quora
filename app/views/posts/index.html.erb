<div class="container d-flex justify-content-center">
	<div class="card mt-5 p-4">
		<div class="mb-3">
			<%= form_tag search_posts_path, :method => :get do %>
				<%= text_field_tag :search, "", class: 'form-control', placeholder: "Search" %>
				<%= submit_tag "Search", { class: "mt-2 btn btn-primary" } %>
			<% end %>
		</div>
		<span class="text mb-4">Question Feeds</span>
		<% @posts.each do |post| %>
			<%= link_to post_url(post), class: 'post-link' do %>
				<div class="d-flex flex-row justify-content-between mb-3">
					<div class="d-flex flex-column p-3">
						<p class="mb-1"><%= post.title %></p> 
						<small class="text-muted"><%= post.description %></small>
					</div>
					<div class="price pt-3" style="padding-left: 10px;">
						<span class="mb-2">Total Votes</span>
						<h5><%= post.total_votes %></h5>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
</div>